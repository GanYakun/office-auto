<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>OfficeAuto Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
    </service>
    <service name="updatePartyStatusToEnable" engine="java" default-entity-name="Party" location="com.banfftech.services.VendorService"
             invoke="updatePartyStatusToEnable" auth="true">
        <description>update a Party And UserLogin</description>
        <auto-attributes include="pk" mode="IN" />
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>


    <service name="banfftech.createWorkEffortAndPartyGroupContact" engine="java"
             location="com.banfftech.services.VendorService" default-entity-name="WorkEffortAndPartyGroupContact"
             invoke="createWorkEffortAndPartyGroupContact">
        <auto-attributes include="pk" mode="INOUT" optional="true"/>
        <attribute name="partyId" type="String" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>

    <service name="banfftech.updateWorkEffortAndPartyGroupContact" engine="java"
             location="com.banfftech.services.VendorService" default-entity-name="WorkEffortAndPartyGroupContact"
             invoke="updateWorkEffortAndPartyGroupContact">
        <auto-attributes include="pk" mode="IN" optional="false"/>
        <auto-attributes include="nonpk" mode="INOUT" optional="true"/>
    </service>

    <service name="banfftech.createSupplierRole" default-entity-name="PartyRole"
             location="com.banfftech.services.VendorService" engine="java" invoke="createSupplierRole" auth="true">
        <description>Create a PartyRole</description>
        <auto-attributes include="pk" mode="IN" optional="true"/>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>

    <service name="banfftech.createSupplierUserLogin" default-entity-name="UserLogin"
             location="com.banfftech.services.VendorService" engine="java" invoke="createSupplierUserLogin" auth="true">
        <description>Create a PartyRole</description>
        <auto-attributes include="pk" mode="IN" optional="true"/>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>

    <service name="banfftech.createPartyMediaResource" default-entity-name="PartyMediaResource"
             location="com.banfftech.services.VendorService" engine="java" invoke="createPartyMediaResource" auth="true">
        <description>Create a PartyMediaResource</description>
        <auto-attributes include="pk" mode="INOUT" optional="true"/>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>

    <service name="banfftech.updatePartyMediaResource" default-entity-name="PartyMediaResource"
             location="com.banfftech.services.VendorService" engine="java" invoke="updatePartyMediaResource" auth="true">
        <description>Update a PartyMediaResource</description>
        <auto-attributes include="pk" mode="IN" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
    </service>

    <service name="banfftech.copyRelationshipAttr"
             location="com.banfftech.services.VendorService" engine="java" invoke="copyRelationshipAttr" auth="true">
        <description>Update a PartyMediaResource</description>
        <attribute mode="IN" name="partyRelationshipId" type="String"/>
        <attribute mode="IN" name="attrName" type="String"/>
        <attribute mode="IN" name="attrValue" type="String" optional="true"/>
    </service>

    <service name="banfftech.ddFormCommitCheck"
             location="com.banfftech.services.VendorService" engine="java" invoke="ddFormCommit" auth="true">
        <description>DDForm提交 检查勾选内容,添加首次提交记录</description>
        <attribute mode="IN" name="supplierPartyId" type="String"/>
    </service>

    <service name="banfftech.recordWorkEffortStatus"
             location="com.banfftech.services.WorkEffortService" engine="java" invoke="recordWorkEffortStatus" auth="true">
        <description>WorkEffort状态变更记录</description>
        <attribute mode="IN" name="workEffortId" type="String"/>
        <attribute mode="IN" name="currentStatusId" type="String"/>
    </service>


</services>